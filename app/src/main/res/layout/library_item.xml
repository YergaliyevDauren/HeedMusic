<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/library_item"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="10dp"
    android:background="@color/Midnight_Blue">
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:id="@+id/card_img_lib_item"
            android:layout_height="40dp"
            app:cardCornerRadius="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/img_lib_item"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/image"
                />

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tv_lib_item_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            tools:text="Song Name"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/card_img_lib_item"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tv_lib_item_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            tools:text="Artist Name"
            android:textColor="@color/Grey"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/card_img_lib_item"
            app:layout_constraintTop_toBottomOf="@+id/tv_lib_item_song"
            />
</androidx.constraintlayout.widget.ConstraintLayout>